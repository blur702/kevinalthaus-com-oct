{
  "name": "@monorepo/page-builder",
  "version": "1.0.0",
  "description": "Production-ready block-based page builder with drag-and-drop editor, responsive grid, extensible widgets, templates, reusable blocks, and full WCAG AA accessibility",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": {
    "name": "Kevin Althaus",
    "email": "contact@kevinalthaus.com"
  },
  "license": "MIT",
  "keywords": [
    "page-builder",
    "cms",
    "drag-drop",
    "responsive",
    "grid-layout",
    "widgets",
    "blocks",
    "wysiwyg",
    "accessibility"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf dist",
    "watch": "tsc -b --watch",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@monorepo/shared": "*",
    "@monorepo/content-manager": "*",
    "express": "^4.18.2",
    "joi": "^17.13.3",
    "pg": "^8.16.3",
    "sanitize-html": "^2.13.1",
    "uuid": "^9.0.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/joi": "^17.2.3",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.5",
    "@types/sanitize-html": "^2.13.0",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
