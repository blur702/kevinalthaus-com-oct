{
  "permissions": {
    "allow": [
      "Bash(where:*)",
      "Bash(docker compose -f docker-compose.yml up:*)",
      "Bash(docker compose -f docker-compose.yml down:*)",
      "Bash(docker compose -f docker-compose.prod.yml up:*)",
      "Bash(docker compose -f docker-compose.prod.yml down:*)",
      "Bash(docker compose logs:*)",
      "Bash(docker compose ps:*)",
      "Bash(npm run lint:*)"
    ],
    "deny": [
      "Bash(powershell.exe:*)",
      "Bash(docker run --privileged:*)",
      "Bash(docker rm:*)",
      "Bash(docker exec:*)"
    ],
    "ask": [
      "Bash(docker exec -it kevinalthaus-postgres-1 bash:*)",
      "Bash(docker exec -it kevinalthaus-main-app-1 sh:*)",
      "Bash(docker exec -it kevinalthaus-api-gateway-1 sh:*)",
      "Bash(docker run --rm plugin-engine:local:*)"
    ]
  }
}