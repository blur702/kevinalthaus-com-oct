{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["jest", "@testing-library/jest-dom", "node"]
  },
  "include": [
    "jest.config.ts",
    "jest.setup.ts",
    "test-import.ts",
    "src/**/__tests__/**/*.test.ts",
    "src/**/__tests__/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "../shared/src/**/*.ts",
    "../shared/src/**/*.tsx"
  ]
}
